    <img id="modalImg" src="" >
  </div>




  <script>
    const modal = document.getElementById("modal");
    const modalImg = document.getElementById("modalImg");

    // Mostrar imágenes de forma secuencial
    const imagenes = document.querySelectorAll(".galeria img");
    imagenes.forEach((img, i) => {
      setTimeout(() => {
        img.classList.add("mostrar");
      }, i * 300); // 300ms de diferencia entre imágenes
    });

    // Abrir modal al hacer clic
    imagenes.forEach(img => {
      img.addEventListener("click", () => {
        modal.style.display = "flex";
        modalImg.src = img.src;
      });
    });

    // Cerrar modal
    modal.addEventListener("click", () => {
      modal.style.display = "none";
    });
  </script>

  <script>
        // Lista de canciones
        const songs = [
            "Take A Chance On Me (From 'Mamma Mia_' Original Motion Picture Soundtrack) [KYjOzH5DyHs].mp3",
            "Our Last Summer (From 'Mamma Mia_' Original Motion Picture Soundtrack) [g-qF3GuAozw].mp3",
            "Andante, Andante [6hNEXuHm8OM].mp3",
            "Mamma Mia (From 'Mamma Mia_' Original Motion Picture Soundtrack) [MFKqiFG6HVs].mp3",
            "Why Did It Have To Be Me_ [1pTA295rjAk].mp3",
            "Angel Eyes [UH48socoj28].mp3",
            "Money, Money, Money (From 'Mamma Mia_' Original Motion Picture Soundtrack) [y6h5BUSo9Vw].mp3",
            "Lay All Your Love On Me (From 'Mamma Mia_' Original Motion Picture Soundtrack) [YT-wSm18JXM].mp3",
            "When I Kissed The Teacher (From _Mamma Mia_ Here We Go Again_) [1IUvX1NpQT4].mp3",
            "SOS (From 'Mamma Mia_' Original Motion Picture Soundtrack) [dIxAEusj2bk].mp3",
            "I Wonder (Departure) [ExmW1vrR_yc].mp3",
            "Dancing Queen [YkLLcIKhJ64].mp3",
            "ABBA - Super Trouper [BshxCIjNEjY].mp3",
            "Does Your Mother Know (From 'Mamma Mia_' Original Motion Picture Soundtrack) [79PFOHmvGk4].mp3",
            "Kisses Of Fire [PGbRTyOo5fY].mp3",
            

        ];

          let currentSong = 0;
        const player = document.getElementById("player");

        function loadSong(index) {
            player.src = songs[index];
            player.play().catch(() => {
                console.log("El navegador bloqueó la reproducción automática.");
            });
        }

        player.addEventListener("ended", () => {
            currentSong++;
            if (currentSong >= songs.length) currentSong = 0;
            loadSong(currentSong);
        });

        // Reproducir automáticamente al cargar la página
        window.addEventListener("load", () => {
            loadSong(currentSong);
        });
    </script>

